<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<!--Definicion de contenerdor principal-->
<VBox spacing="10" alignment="CENTER"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.libreria.controlador.MenuController">

    <!--Texto del titulo del menu-->
    <Text text="Menu principal" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!--Botones con sus respectivos metodos de accion en el controlador-->
    <Button text="Libros" onAction="#gestionarLibros" />
    <Button text="Clientes" onAction="#gestionarClientes" />
    <Button text="Ventas y Prestamos" onAction="#gestionarVentas" />
    <Button text="Gestion de Stock" onAction="#gestionarStock" />
    <Button text="Reportes" onAction="#verReportes" />
    <Button text="Configuracion" onAction="#configuracion" />
    <Button text="Salir" onAction="#salir" />

</VBox>